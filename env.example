# RepoRank RAG Agent - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required
# =============================================================================

# OpenAI API key for embeddings and LLM
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# Optional - Recommended
# =============================================================================

# GitHub personal access token (increases rate limits from 60 to 5000/hour)
GITHUB_TOKEN=ghp_your_github_token

# =============================================================================
# Optional - x402 Payments
# =============================================================================

# Wallet address to receive payments (enables x402 payment gating)
WALLET_ADDRESS=

# =============================================================================
# Pricing Configuration
# =============================================================================

# Enable free tier
FREE_TIER_ENABLED=true

# Number of free requests per rate limit window
FREE_TIER_REQUESTS=5

# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# Price per request in USD (for paid requests)
PRICE_PER_REQUEST=0.02

# =============================================================================
# Performance Tuning
# =============================================================================

# Cache TTL in seconds (for GitHub API responses and embeddings)
CACHE_TTL_SECONDS=3600

# Maximum README characters to process
README_MAX_CHARS=8000

# Number of similar repositories to retrieve from RAG
RAG_K_NEIGHBORS=3

# =============================================================================
# Storage
# =============================================================================

# ChromaDB storage path
CHROMA_DB_PATH=./data/chroma_db

# =============================================================================
# Models
# =============================================================================

# OpenAI embedding model
EMBEDDING_MODEL=text-embedding-3-small

# OpenAI LLM model
LLM_MODEL=gpt-4o-mini
